#%RAML 1.0
title: American Flights API

types:
  AmericanFlight: !include /exchange_modules/68ef9520-24e9-4cf2-b2f5-620025690913/training-american-flight-data-type/1.0.1/AmericanFlightDataType.raml

/flights:
  get:
    queryParameters:
      destination:
        required: false
        enum:
          - SFO
          - LAX
          - CLE
    responses:
      200:
        body:
          application/json:
            type: AmericanFlight[]
            examples:
              output: !include /exchange_modules/68ef9520-24e9-4cf2-b2f5-620025690913/training-american-flights-example/1.0.1/AmericanFlightsExample.raml

              
          
  post:
    body:
      application/json:
        type: AmericanFlight
        examples:
          input: !include /examples/americanflightnoid.raml
    responses:
      201:
        body:
          application/json:
            example:
              message: Flight Added(But NOt Really..!)
  /{ID}:
    get:
      responses:
        200:
          body:
            application/json:
              type: AmericanFlight
              examples:
                output: !include /examples/americaflightexample.raml
    delete:
      responses:
        200:
          body:
            application/json:
              example:
                message: Flight Deleted (But Not Really..!)